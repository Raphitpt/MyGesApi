{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",

        "baseUrl": ".",
        "paths": {
            "~/*": ["./src/*"],
            "!/*": ["./tests/*"]
        },

        "strict": true,
        "noEmit": true,
        "skipLibCheck": true,

        "isolatedModules": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },

    "include": ["src", "examples"],
    "exclude": ["node_modules", "dist"]
}